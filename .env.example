# Environment configuration for Mantyx
# Copy this file to .env and customize as needed

# Base directory for all Mantyx data
MANTYX_BASE_DIR=/srv/mantyx

# Server settings
MANTYX_HOST=0.0.0.0
MANTYX_PORT=8420
MANTYX_DEBUG=false

# Database URL (defaults to SQLite in data directory)
# MANTYX_DATABASE_URL=sqlite:////srv/mantyx/data/mantyx.db

# Upload limits
MANTYX_MAX_UPLOAD_SIZE_MB=100

# App restart settings
MANTYX_DEFAULT_RESTART_DELAY=5
MANTYX_DEFAULT_MAX_RESTARTS=3
MANTYX_RESTART_WINDOW=300

# Health check settings
MANTYX_HEALTH_CHECK_INTERVAL=30
MANTYX_HEALTH_CHECK_TIMEOUT=10

# Retention settings
MANTYX_LOG_RETENTION_DAYS=30
MANTYX_BACKUP_RETENTION_COUNT=5
