{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Mantyx: Setup Development Environment",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/setup-dev.sh",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": true
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Mantyx: Check Environment",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/check-env.sh",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true
            }
        },
        {
            "label": "Mantyx: Run Development Server",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "-m",
                "mantyx.cli",
                "run"
            ],
            "options": {
                "env": {
                    "MANTYX_BASE_DIR": "${workspaceFolder}/dev_data",
                    "MANTYX_DEBUG": "true",
                    "MANTYX_PORT": "8420"
                }
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true
        },
        {
            "label": "Mantyx: Install Dependencies",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/pip",
            "args": [
                "install",
                "-e",
                ".[dev]"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Mantyx: Open Web Interface",
            "type": "shell",
            "command": "xdg-open",
            "args": [
                "http://localhost:8420"
            ],
            "windows": {
                "command": "start",
                "args": [
                    "http://localhost:8420"
                ]
            },
            "osx": {
                "command": "open",
                "args": [
                    "http://localhost:8420"
                ]
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "Mantyx: Format Code",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/black",
            "args": [
                "src/mantyx",
                "examples"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Mantyx: Run Pre-commit",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/pre-commit",
            "args": [
                "run",
                "--all-files"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Mantyx: Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/pytest",
            "args": [
                "-v"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Mantyx: Clean Dev Data",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "dev_data"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Mantyx: Deploy to Server",
            "type": "shell",
            "command": "${workspaceFolder}/deploy.sh",
            "args": [],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Mantyx: View Remote Logs",
            "type": "shell",
            "command": "ssh",
            "args": [
                "user@YOUR_SERVER_IP",
                "sudo",
                "journalctl",
                "-u",
                "mantyx",
                "-f",
                "-n",
                "100"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "isBackground": true
        }
    ]
}
